[
  {
    "type": "text",
    "label": "Full Name",
    "name": "fullName",
    "placeholder": "Enter your full name",
    "validators": {
      "required": true,
      "minLength": 3
    }
  },
  {
    "type": "email",
    "label": "Email Address",
    "name": "email",
    "placeholder": "example@domain.com",
    "validators": {
      "required": true,
      "email": true
    }
  },
  {
    "type": "number",
    "label": "Age",
    "name": "age",
    "placeholder": "Enter your age",
    "min": 18,
    "max": 100,
    "validators": {
      "required": true,
      "min": 18,
      "max": 100
    }
  },
  {
    "type": "password",
    "label": "Password",
    "name": "password",
    "placeholder": "Enter password",
    "validators": {
      "required": true,
      "minLength": 6
    }
  },
  {
    "type": "select",
    "label": "Department",
    "name": "department",
    "options": [
      { "key": "hr", "value": "HR" },
      { "key": "dev", "value": "Development" },
      { "key": "sales", "value": "Sales" }
    ],
    "placeholder": "Select department",
    "validators": {
      "required": true
    }
  },
  {
    "type": "radio",
    "label": "Gender",
    "name": "gender",
    "options": [
      { "key": "male", "value": "Male" },
      { "key": "female", "value": "Female" },
      { "key": "other", "value": "Other" }
    ],
    "validators": {
      "required": true
    }
  },
  {
    "type": "date",
    "label": "Date of Birth",
    "name": "dob",
    "validators": {
      "required": true
    }
  },
  {
    "type": "file",
    "label": "Upload Resume",
    "name": "resume",
    "accept": ".pdf,.doc,.docx",
    "validators": {}
  },
  {
    "type": "textarea",
    "label": "Address",
    "name": "address",
    "placeholder": "Enter your address",
    "rows": 2,
    "validators": {
      "minLength": 10
    }
  },
  {
    "type": "range",
    "label": "Experience Rating",
    "name": "experience",
    "min": 0,
    "max": 10,
    "step": 1,
    "validators": {}
  },
  {
    "type": "checkbox",
    "label": "Agree to Terms",
    "name": "terms",
    "validators": {
      "required": true
    }
  }
]